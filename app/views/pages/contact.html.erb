<h1>Contact Us</h1>
      
      <% if flash[:notice] %>
        <div class="alert alert-danger">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_with url: contact_path, method: :post, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "Email Adress", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-4">
          <%= form.label :message, "Message", class: "form-label" %>
          <%= form.text_area :message, class: "form-control", rows: 4, required: true %>
        </div>

        <div class="d-grid">
          <%= form.submit "Send", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>